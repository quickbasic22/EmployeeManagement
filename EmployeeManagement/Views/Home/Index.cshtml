@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Employee List";
}

<div class="card">
    @foreach (var employee in Model)
    {
        <div class="card m-3">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top" src="~\images\noimage.png" />
            <div class="card-footer text-center">
                <a href="#" class="btn btn-primary align-content-md-between">View</a>
                <a href="#" class="btn btn-primary align-content-between">Edit</a>
                <a href="#" class="btn btn-danger align-content-between">Delete</a>
            </div>
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="~/jquery/jquery.js"></script>
        <script src="~/bootstrap/js/bootstrap.js"></script>
    }
    }